<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.MohamedTaha.Imagine.Quran">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconqoran"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:roundIcon="@mipmap/iconqoran"
        android:supportsRtl="true"
        android:theme="@style/FullScreenWindow">
        <activity
            android:name="com.MohamedTaha.Imagine.Quran.MainActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/backgroundTheme"></activity>
        <activity
            android:name="com.MohamedTaha.Imagine.Quran.GridViewActivity"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name="com.MohamedTaha.Imagine.Quran.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/backgroundTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.MohamedTaha.Imagine.Quran.ListSoundReader"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppTheme">

        </activity>
    </application>
</manifest>