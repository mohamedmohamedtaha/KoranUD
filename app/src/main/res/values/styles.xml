<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--  Alternative Base application theme. -->

    <style name="AppThemeCustom" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <!-- Delete ActionBar -->

    <style name="FullScreenWindow" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>


    <!-- set background for a void OverDraw  -->
    <style name="backgroundTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- set background for a void Background Floating Action Button  -->
    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/textColorBackgroundFloatingButton</item>
    </style>

    <!-- set FloatingActionButton-->
    <style name="theme_float_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_and_right_bottom</item>
        <item name="android:layout_marginRight">@dimen/margin_left_and_right_bottom</item>
        <item name="android:layout_marginBottom">@dimen/margin_left_and_right_bottom</item>

    </style>
    <!-- set Sub FloatingActionButton -->
    <style name="theme_sub_float_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- set textNameShehk and NameSora -->
    <style name="theme_text_sora_and_shekh">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/margin_top_name_sora</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- set theme_text_for_time_sound in Main Activity -->
    <style name="theme_text_for_time_sound">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/text_size_time_sound</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/textColorTime</item>
    <item name="android:layout_above">@+id/song_current_duration_label</item>
        <item name="android:layout_gravity">center</item>


    </style>
    <!-- set theme ImageView in Main Activity -->
    <style name="theme_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
           </style>


    <!-- set theme custom_name_reader -->
<style name="theme_custom_name_reader">
<item name="android:layout_width">wrap_content</item>
<item name="android:layout_height">@dimen/defultValueZero</item>
 <item name="android:textSize">@dimen/text_size_time_sound</item>
 <item name="android:layout_marginTop">@dimen/defultValueFive</item>
    <item name="android:layout_marginBottom">@dimen/defultValueFive</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textColor">@color/colorButton</item>
</style>
    </resources>
